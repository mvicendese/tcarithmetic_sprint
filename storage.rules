rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // User Profile Photos (Example structure)
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId || request.auth.token.role == 'admin';
    }

    // Class Resources
    match /classes/{classId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.role == 'teacher' || request.auth.token.role == 'admin';
    }

    // Default Deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}