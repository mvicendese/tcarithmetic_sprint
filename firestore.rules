rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isTeacher() {
      // Use custom claims for efficient role checking
      return isAuthenticated() && (request.auth.token.role == 'teacher' || request.auth.token.role == 'admin');
    }

    function isAdmin() {
      // Use custom claims for efficient role checking
      return isAuthenticated() && request.auth.token.role == 'admin';
    }

    // User Profiles
    match /users/{userId} {
      allow read: if isAuthenticated();
      // Users can update own profile, but NOT their role
      allow update: if (isOwner(userId) && request.resource.data.role == resource.data.role) || isAdmin() || (isTeacher() && resource.data.role == 'student');
      // Only Teachers/Admins can create new users (Teacher -> Student only)
      allow create: if isAdmin() || (isTeacher() && request.resource.data.role == 'student');
      allow delete: if isAdmin();
    }

    // Student Profiles (Extended data)
    match /studentData/{studentId} {
      // Students can read their own data (studentId matches their auth.uid)
      // Teachers/Admins can read all student data
      allow read: if request.auth.uid == studentId || isTeacher() || isAdmin();
      // Only Teachers/Admins should write official student data records
      allow write: if isTeacher() || isAdmin();
    }

    // Classes
    match /classes/{classId} {
      allow read: if isAuthenticated();
      allow write: if isTeacher() || isAdmin();
    }

    // Test Results / Attempts
    match /test_results/{resultId} {
      allow read: if isOwner(resource.data.studentId) || isTeacher() || isAdmin();
      // Allow creation if the studentId in the data matches the auth uid
      allow create: if isAuthenticated() && request.resource.data.studentId == request.auth.uid;
    }
    
    // System Settings (for test config)
    match /system_settings/{docId} {
      allow read: if isAuthenticated(); // Restrict to authenticated users
      allow write: if isAdmin();
    }
  }
}
